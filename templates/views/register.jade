extends ../layouts/default

block head
    meta(property="og:title"        content="Register now for Spring League!")
    meta(property="og:url"          content="http://www.sflultimate.com/register")
    meta(property="og:description"  content="Sign up to secure your spot!")

    meta(property="og:image"        content="http://www.sflultimate.com/images/beach-andrea-dumping.jpg")
