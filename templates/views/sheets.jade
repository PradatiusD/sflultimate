html
  head
    title South Florida Spring League 2017 Stat Sheet
    link(rel='stylesheet' href='/styles/site.css' media='all')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed")
    style.
      @page {
          size: auto;
          margin: 1em;
      }

      td, th, p {
        font-size: 1.5em;
      }

      .table-bordered, .table-bordered td, .table-bordered th {
        border: 3px solid #4a4a4a !important;
      }

      .logo {
        max-height: 400px;
        float: right;
        margin-top: 1em;
      }

  body(ng-app='StatSheetApp')

    .container(ng-controller='StatSheetController')

      section(ng-repeat="team in teams" style='page-break-after: always')
        .row
          .col-xs-7
            header.page-header
              h1 
                | Team {{team.color}} 
                small Stat Sheet

            h3 Game Date:

            table.table.table-bordered.table-striped
              thead
                th Team
                th Score
              tbody
                tr
                  td(style='width: 40%') {{team.color}}
                  td
                tr
                  td(style='width: 40%') Opponent:
                  td
          .col-xs-5
            img(src='/images/city-logo.png' class='img-responsive logo')

        hr
        br

        table.table.table-bordered.table-striped
          thead
            th Player Name
            th Assists
            th Scores
            th Defenses
          tbody
            tr(ng-repeat="player in team.players | orderBy: 'name.first'")
              td(style='width: 25%') {{player.name.first}} {{player.name.last}}
              td(style='width: 25%')
              td(style='width: 25%')
              td(style='width: 25%')

        p.text-muted
          em Please fill out and return to SFL Ultimate staff.  Stats allow us to determine awards (MVP, assist, score, defensive leaders) for each gender as well as help us resolve seeding for the playoff tournament. Thank you!

    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js')
    script(src='/js/sheets.js')