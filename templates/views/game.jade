extends ../layouts/default

block head
    meta(property="og:title"        content="South Florida Events")
    meta(property="og:url"          content="https://www.sflultimate.com/game/" + game._id)
    meta(property="og:description"  content="Game Recap")

block content
    .container
        br
        p.lead.text-center
            | #{game.scheduledTime.toLocaleDateString()} <br/> <strong>#{game.league.title}</strong> <br/> #{game.location.name}
        .row
            for team in teams
                .col-sm-6
                    .text-center
                        p.h1=team.score
                        h2=team.name
                    
                    h3 Present
                    table.table.table-striped
                        thead
                            tr
                                th Name
                                th Assists
                                th Scores
                                th Defenses    
                        tbody
                            for stat in team.stats
                                if stat.attended
                                    tr
                                        td=stat.player.name.first + ' ' + stat.player.name.last
                                        td=stat.scores
                                        td=stat.assists
                                        td=stat.defenses
                    h3 Missing
                    table.table.table-striped
                        thead
                            tr
                                th Name    
                        tbody
                            for stat in team.stats
                                if !stat.attended
                                    tr
                                        td=stat.player.name.first + ' ' + stat.player.name.last
